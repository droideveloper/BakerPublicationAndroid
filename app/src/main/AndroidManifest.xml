<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="org.fs.magazine">

  <uses-permission android:name="android.permission.INTERNET"
    android:maxSdkVersion="23" />
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"
    android:maxSdkVersion="23" />
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
    android:maxSdkVersion="23" />

  <application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:name=".BakerApplication"
    android:hardwareAccelerated="true"
    android:theme="@style/LibraryTheme"
    android:supportsRtl="true">

    <activity android:name=".views.BakerShelfActivity"
      android:screenOrientation="portrait">

      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>

    </activity>


    <service android:name="org.fs.evoke.DownloadService"
      android:exported="false">

      <intent-filter>
        <action android:name="org.fs.evoke.ACTION_START" />
        <category android:name="org.fs.evoke.CATEGORY_DEFAULT" />
      </intent-filter>

      <intent-filter>
        <action android:name="org.fs.evoke.ACTION_STOP" />
        <category android:name="org.fs.evoke.CATEGORY_DEFAULT" />
      </intent-filter>

    </service>

  </application>

</manifest>
